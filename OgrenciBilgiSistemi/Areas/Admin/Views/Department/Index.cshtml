@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header mb-3">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">
                    <button type="button"
                            class="btn float-right"
                            data-toggle="modal"
                            data-target="#departmentAddModal">
                        <i class="_icon fas fa-plus"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="departmentAddModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Bölüm Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="department-create-form" onsubmit="return DepartmentCreate(event)">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="DepartmentName" class="col-form-label">Bölüm Adı:</label>
                        <input required type="text" class="form-control" id="DepartmentName" name="DepartmentName">
                    </div>
                    <div class="form-group">
                        <label for="DepartmentLanguageId" class="col-form-label">Bölüm Dili:</label>
                        <select name="DepartmentLanguageId" id="DepartmentLanguageId" class="form-control">
                            @foreach (var item in ViewBag.Language)
                            {
                                <option value="@item.Id">@item.LanguageName</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>
<table id="DepartmentTable" class="table table-bordered nowrap table-sm">
    <thead>
        <tr>
            <th>Bölüm Adı</th>
        </tr>
    </thead>
</table>

<script src="/js/admin/department.js"></script>