@using OgrenciBilgiSistemi.Helper
<!DOCTYPE html>
<html lang="en">
<head>
    @inject IHelper _helper; 
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OgrenciBilgiSistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OgrenciBilgiSistemi.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" />
    
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- DATATABLE -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
    <link href="https://cdn.datatables.net/v/bs5/jszip-3.10.1/dt-1.13.7/af-2.6.0/b-2.4.2/b-colvis-2.4.2/b-html5-2.4.2/b-print-2.4.2/cr-1.7.0/date-1.5.1/fc-4.3.0/fh-3.4.0/kt-2.11.0/r-2.5.0/rg-1.4.1/rr-1.4.1/sc-2.3.0/sb-1.6.0/sp-2.2.0/sl-1.7.0/sr-1.3.0/datatables.min.css" rel="stylesheet">
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/v/bs5/jszip-3.10.1/dt-1.13.7/af-2.6.0/b-2.4.2/b-colvis-2.4.2/b-html5-2.4.2/b-print-2.4.2/cr-1.7.0/date-1.5.1/fc-4.3.0/fh-3.4.0/kt-2.11.0/r-2.5.0/rg-1.4.1/rr-1.4.1/sc-2.3.0/sb-1.6.0/sp-2.2.0/sl-1.7.0/sr-1.3.0/datatables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    
   
</head>
<body>
    <!--Main Navigation-->
    <header>
        <!-- Sidebar -->
        <nav id="sidebarMenu"
             class="collapse d-lg-block sidebar collapse bg-white">
            <div class="position-sticky">
                <div class="list-group list-group-flush mx-3 mt-4">
                    <a href="~/Admin/Home/Index"
                       class="list-group-item list-group-item-action py-2 ripple"
                       aria-current="true">
                        <i class="fas fa-tachometer-alt fa-fw me-3"></i><span>Ana Sayfa</span>
                    </a>
                    <a href="~/Admin/CourseRegistration/Index"
                       class="list-group-item list-group-item-action py-2 ripple">
                        <i class="fas fa-users fa-fw me-3"></i><span>Ders Kaydı Onay/Red</span>
                    </a>
                    <a href="~/Admin/User/Index"
                       class="list-group-item list-group-item-action py-2 ripple">
                        <i class="fas fa-users fa-fw me-3"></i><span>Kullanıcılar</span>
                    </a>
                    <a href="~/Admin/DepartmentLanguage/Index"
                       class="list-group-item list-group-item-action py-2 ripple">
                        <i class="fa-solid fa-language me-3"></i><span>Bölüm Dili</span>
                    </a>
                    <a href="~/Admin/Department/Index"
                       class="list-group-item list-group-item-action py-2 ripple">
                        <i class="fa-solid fa-palette me-3"></i><span>Bölümler</span>
                    </a>
                    <a href="~/Admin/Class/Index"
                       class="list-group-item list-group-item-action py-2 ripple">
                        <i class="fa-solid fa-list-ol me-3"></i><span>Sınıflar</span>
                    </a>
                    <a href="~/Admin/Semester/Index"
                       class="list-group-item list-group-item-action py-2 ripple">
                        <i class="fa-solid fa-cloud-sun-rain me-3"></i><span>Dönemler</span>
                    </a>
                    <a href="~/Admin/Course/Index"
                       class="list-group-item list-group-item-action py-2 ripple">
                        <i class="fa-solid fa-book me-3"></i><span>Dersler</span>
                    </a>
                    <a href="~/Admin/AssessmentType/Index"
                       class="list-group-item list-group-item-action py-2 ripple">
                        <i class="fa-solid fa-book me-3"></i><span>Sınav Türleri</span>
                    </a>
                </div>
            </div>
        </nav>
        <!-- Sidebar -->
        <!-- Navbar -->
        <nav id="main-navbar"
             class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
            <!-- Container wrapper -->
            <div class="container-fluid">
                <!-- Toggle button -->
                <button class="navbar-toggler"
                        type="button"
                        data-mdb-toggle="collapse"
                        data-mdb-target="#sidebarMenu"
                        aria-controls="sidebarMenu"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>

                <!-- Brand -->
                <a class="navbar-brand" href="#">
                    <img src="~/assets/NevuLogo.png"
                         height="25"
                         alt=""
                         loading="lazy" />
                </a> 

                <!-- Right links -->
                <ul class="navbar-nav ms-auto d-flex flex-row">
                    <!-- Notification dropdown -->
                    @{
                        var (semmesterName, year) = _helper.GetSemesterAndYear();
                    }
                    <!-- Year -->
                    <li class="nav-item">
                        <a class="nav-link me-3 me-lg-0" href="#">
                            @year
                        </a>
                    </li>
                    <!-- SamesterName -->
                    <li class="nav-item">
                        <a class="nav-link me-3 me-lg-0" href="#">
                            @semmesterName
                        </a>
                    </li>

                    <!-- Avatar -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle hidden-arrow d-flex align-items-center"
                           href="#"
                           id="navbarDropdownMenuLink"
                           role="button"
                           data-mdb-toggle="dropdown"
                           aria-expanded="false">
                            <img src="https://mdbootstrap.com/img/Photos/Avatars/img (31).jpg"
                                 class="rounded-circle"
                                 height="22"
                                 alt=""
                                 loading="lazy" />
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end"
                            aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="~/Login/Logout">Çıkış Yap</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->
    </header>
    <main style="margin-top: 58px">
        <div class="container pt-4">
            @RenderBody()
        </div>
    </main>
   
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<!-- notification Js -->
<script src="~/assets/js/plugins/bootstrap-notify.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var Information = '@(ViewBag.Information)';
        var Error = '@(ViewBag.Error)';
        var Primary = '@(ViewBag.Primary)';
        var Success = '@(ViewBag.Success)';
        var Warning = '@(ViewBag.Warning)';
        if (Information !== "") {
            info(Information)
        }
        if (Error !== "") {
            error(Error)
        }
        if (Primary !== "") {
            primary(Primary)
        }
        if (Success !== "") {
            success(Success)
        }
        if (Warning !== "") {
            warning(Warning)
        }
    });
</script>