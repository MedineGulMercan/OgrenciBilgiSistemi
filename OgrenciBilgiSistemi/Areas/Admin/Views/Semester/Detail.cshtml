@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model OgrenciBilgiSistemi.Domain.Entities.Semester
<style>
    .delete {
        float: right;
    }

</style>
<div class="modal-footer">
    <button type="button" class="btn btn-danger pull-right delete" onclick="Delete()">Sil</button>
</div>
<form id="semester-update-form" onsubmit="return SemesterUpdate(event)">
    <div class="modal-body">
        <input required type="hidden" id="Id" name="Id" value="@Model.Id">
        <div class="form-group">
            <label for="SemesterName" class="col-form-label">Dönem Adı:</label>
            <input required type="text" class="form-control" id="SemesterName" name="SemesterName" value="@Model.SemesterName">
        </div>
    </div>
    <div class="modal-footer">
        <a href="/Admin/Semester/Index" class="btn btn-secondary" data-dismiss="modal">İptal</a>
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </div>
</form>
<script src="/js/admin/semester.js"></script>